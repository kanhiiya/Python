# Example environment variables for my_fastapi_app

# App
PROJECT_NAME=FastAPI Modular App
VERSION=1.0.0
HOST=0.0.0.0
PORT=8000

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/postgres

# JWT / Security
SECRET_KEY=replace_with_a_secure_random_value
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - comma separated origins (example)
BACKEND_CORS_ORIGINS=["http://localhost", "http://localhost:3000"]

# HTTPS enforcement
FORCE_HTTPS=False

# Rate limiting (basic)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Optional Redis for centralized rate limiting
REDIS_URL=redis://redis:6379/0
